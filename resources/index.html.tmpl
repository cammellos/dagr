<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-nr-min.css">
    
    <title>Dagr</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style type="text/css">
      html {
        height: 100%;
      }
      body {
        background-color: #EBEBEB;
        height: 100%;
      }
      #container {
        background-color: white;
        width: 900px;
        margin: 0 auto;
        height: 100%;
        box-shadow: 0px 0px 25px 11px rgba(50, 50, 50, 0.05);
      }
      .status h2 {
        font-size: 55pt;
        padding: 0 0 0 5px;
        margin: 0;
        display: inline;
      }
      #succeeded {
        background-color: #dff0d8;
        color: #3c763d;
      }
      #retryable {
        background-color: #fcf8e3;
        color: #8a6d3b;
      }
      #failed {
        background-color: #f2dede;
        color: #a94442;
      }
      
      #programs table {
        width: 100%;
        border: none;
      }
      
      #programs thead {
        background-color: #D6D6D6;
      }
      
      #programs td, 
      #programs th {
        border-left: none;
      }
      .succeeded {
        display: inline;
        background-color: #dff0d8;
        padding: 5px;
        border-radius: 5px;
        color: #3c763d;
      }
      
      .table-1-3 {
        width:33.33333%;
      }
      
    </style>
  </head>
  
  <body>
    <div id="container">
      <!-- header --> 
      <div class="pure-menu pure-menu-open pure-menu-horizontal">
        <a href="#" class="pure-menu-heading">Dagr</a>

        <ul>
          <li class="pure-menu-selected"><a href="#">Today</a></li>
          <li><a href="#">Programs</a></li>
        </ul>
      </div>
      
      <div class="status pure-g">
        <div id="succeeded" class="pure-u-1-3">
          <h2>{{.Succeeded}}</h2>
        </div>
        <div id="retryable" class="pure-u-1-3">
          <h2>{{.Retryable}}</h2>
        </div>
        <div id="failed" class="pure-u-1-3">
          <h2>{{.Failed}}</h2>
        </div>
      </div>
      
      
      <div id="programs">
        <table class="pure-table">
          <thead>
            <tr>
              <th class="program-name">Program</th>
              <th>Last Execution</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          
          <tbody>
{{ range .Programs }}
            <tr>
              <td class="program-name table-1-3">
                <a href="#">{{.Name}}</a>
              </td>
              <td class="table-1-3">28th Jan 2014 18:00</td>
              <td class="execution-status-success">
                <div class="succeeded">Succeeded</div>
              </td>
              <td>
                <form action="/execute/{{.Name}}" method="post">
                  <button class="pure-button pure-button-primary">Run</button>
                </form>
              </td>
            </tr>
{{ end }}

          </tbody>
        </table>
      </div>
    </div>

  </body>
</html>
